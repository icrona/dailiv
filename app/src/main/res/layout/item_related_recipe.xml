<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_related_recipe"
    android:padding="8dp">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_related_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="180%"
            android:id="@+id/iv_related_recipe"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:id="@+id/tv_related_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prl_related_recipe"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:minHeight="60dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/tv_see_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/see_recipe"
        android:textSize="12sp"
        android:textColor="@color/red"
        />

</RelativeLayout>